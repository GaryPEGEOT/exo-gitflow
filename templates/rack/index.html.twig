{% extends 'base.html.twig' %}

{% block title %}Rack index{% endblock %}

{% block body %}
    <h1>Rack index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rack in rack %}
            <tr>
                <td>{{ rack.id }}</td>
                <td>{{ rack.name }}</td>
                <td>
                    <a href="{{ path('rack_show', {'id': rack.id}) }}">show</a>
                    <a href="{{ path('rack_edit', {'id': rack.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rack_new') }}">Create new</a>
{% endblock %}
